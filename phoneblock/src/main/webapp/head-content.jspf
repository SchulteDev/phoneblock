<meta property="og:image" content="<%=request.getContextPath() %>/app-preview.png" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="de_DE" />

<link rel="stylesheet" href="<%= request.getContextPath() %>/webjars/bulma/0.9.4/css/bulma.min.css">
