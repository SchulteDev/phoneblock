<%@page import="de.haumacher.phoneblock.app.LoginFilter"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"	pageEncoding="UTF-8"%>
<%-- 
  - Author(s): Bernhard Haumacher et al.
  - Copyright Notice: Copyright (c) 2022 Bernhard Haumacher et al. All Rights Reserved.
  - Description: JSP fragment that renders the application header. It must be included directly following the body tag.
  --%>
<nav class="navbar" role="navigation" aria-label="main navigation">
	<div class="navbar-brand">
		<a class="navbar-item" href="https://phoneblock.haumacher.de"><img alt="PhoneBlock Logo"
			src="<%=request.getContextPath()%>/app-logo.svg" height="28" style="padding-right: 1ex;"> PhoneBlock
		</a> <a role="button" class="navbar-burger" aria-label="menu"
			aria-expanded="false" data-target="navbarBasicExample"> <span
			aria-hidden="true"></span> <span aria-hidden="true"></span> <span
			aria-hidden="true"></span>
		</a>
	</div>

	<div id="navbarBasicExample" class="navbar-menu">
		<div class="navbar-start">
			<a class="navbar-item" href="<%=request.getContextPath() %>/">Home</a>
			<a class="navbar-item" href="<%=request.getContextPath() %>/setup.jsp">Installation</a>
			<a class="navbar-item" href="<%=request.getContextPath() %>/faq.jsp">FAQ</a>
			<a class="navbar-item" href="<%=request.getContextPath() %>/status.jsp">Status</a>

			<div class="navbar-item has-dropdown is-hoverable">
				<a class="navbar-link">More</a>

				<div class="navbar-dropdown">
					<a class="navbar-item" href="https://github.com/haumacher/phoneblock" target="_blank">GitHub Project</a>
					<a class="navbar-item" href="<%=request.getContextPath() %>/block.jsp">Rufsperre hinzufügen</a>
					
					<hr class="navbar-divider">
					<a class="navbar-item" href="https://github.com/haumacher/phoneblock/issues/new" target="_blank">Report an issue</a>
				</div>
			</div>
		</div>

		<div class="navbar-end">
			<div class="navbar-item">
				<div class="control has-icons-left has-icons-right">
				  <input id="pb-seach-input" class="input is-rounded" type="email" placeholder="Telefonnummer untersuchen">
				  <span class="icon is-small is-left">
				    <i class="fas fa-phone"></i>
				  </span>
				  <span class="icon is-small is-right is-clickable" id="pb-seach-button">
				    <i class="fas fa-search"></i>
				  </span>
				</div>
			</div>
			
			<a class="navbar-item" title="Zur Facebook-Seite" href="https://www.facebook.com/PhoneBlock" target="_blank">
				<span class="icon" style="color: #1877F2;">
			    	<i class="fa-brands fa-lg fa-facebook"></i>
		        </span>
		    </a>
      			
			<div class="navbar-item">
				<div class="buttons">
					<% if (LoginFilter.getAuthenticatedUser(session) == null) { %>
					<a class="button is-primary" href="<%=request.getContextPath() %>/signup.jsp">
						<span class="icon">
							<i class="fa-solid fa-user-plus"></i>
          				</span>
						<strong>Sign up</strong>
					</a>
					
					<a class="button is-light" href="<%=request.getContextPath() %>/login.jsp">
						<span class="icon">
							<i class="fa-solid fa-right-to-bracket"></i>
          				</span>
						<strong>Log in</strong>
					</a>
					<% } else { %>
					<a class="button is-primary" href="<%=request.getContextPath() %>/settings.jsp">
						<span class="icon">
							<i class="fa-solid fa-user"></i>
          				</span>
						<strong>Settings</strong>
					</a>
					
					<a class="button is-light" href="<%=request.getContextPath() %>/logout">
						<span class="icon">
							<i class="fa-solid fa-right-from-bracket"></i>
          				</span>
						<strong>Log out</strong>
					</a>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</nav>

<section class="hero is-primary">
	<div class="hero-body" style="position: relative;">
		<p class="title">PhoneBlock</p>
		<p class="subtitle">Der Spam-Filter für Deinen Telefonanschluss</p>
		<a href="https://github.com/haumacher/phoneblock" target="_blank">
			<img alt="Fork me on GitHub" width="149" height="149" style="position: absolute; top: 0px; right: 0px;"
				src="https://github.blog/wp-content/uploads/2008/12/forkme_right_red_aa0000.png?resize=149%2C149" />
		</a>
	</div>
</section>
